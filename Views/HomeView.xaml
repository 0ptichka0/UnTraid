<UserControl x:Class="UnTraid.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ScottPlot="clr-namespace:ScottPlot;assembly=ScottPlot.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1000">

    <UserControl.Resources>
        <!-- Стиль для выбранного актива -->
        <Style x:Key="SelectedAssetStyle" TargetType="Border">
            <Setter Property="BorderBrush" Value="#2196F3"/>
            <Setter Property="BorderThickness" Value="3"/>
            <Setter Property="Background" Value="#E3F2FD"/>
        </Style>

        <!-- Стиль для невыбранного актива -->
        <Style x:Key="UnselectedAssetStyle" TargetType="Border">
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <!-- Стиль для кнопки актива -->
        <Style x:Key="AssetButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <ContentPresenter/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для кнопок временного диапазона -->
        <Style x:Key="TimeFrameButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <!-- Стиль для выбранного временного диапазона -->
        <Style x:Key="SelectedTimeFrameButtonStyle" TargetType="Button" BasedOn="{StaticResource TimeFrameButtonStyle}">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#2196F3"/>
        </Style>
    </UserControl.Resources>

    <Grid Background="White">
        <Grid Background="White" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Заголовок страницы -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                       Text="Торговая панель" 
                       FontSize="28" 
                       FontWeight="SemiBold"
                       Foreground="#333333"
                       Margin="0,0,0,20"/>

                <Grid Grid.Column="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Button x:Name="NegativeBord"
                        Click="NegativeBordButton_Click"
                        Grid.Column ="0"
                        Width="24" Height="24"
                        >
                    </Button>

                    <TextBlock x:Name="TextBord" 
                        Grid.Column ="1" 
                        Text="0"
                        FontWeight="Bold"
                        FontSize="15"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        />

                    <Button x:Name="PositiveBord"
                        Click="PositiveBordButton_Click"
                        Grid.Column="2"
                        Width="24" Height="24"
                        >
                    </Button>
                </Grid>
            </Grid>
            <!-- Панель выбора активов -->
            <Border Grid.Row="1" Background="#F8F9FA" CornerRadius="12" Padding="20" Margin="0,0,0,15">
                <StackPanel>
                    <!--<TextBlock Text="Выбор актива" FontWeight="SemiBold" FontSize="16" Margin="0,0,0,15"/>-->

                    <StackPanel Orientation="Horizontal">
                        <!-- SBER -->
                        <Button x:Name="SberButton" Style="{StaticResource AssetButtonStyle}" 
                                Click="AssetButton_Click" Tag="SBER" Margin="0,0,15,0">
                            <Border x:Name="SberBorder" Style="{StaticResource UnselectedAssetStyle}" 
                                    Width="80" Height="80" CornerRadius="40">
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <Ellipse Width="50" Height="50" Fill="#00A86B" Margin="0,0,0,5"/>
                                    <TextBlock Text="SBER" FontSize="10" FontWeight="Bold" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </Button>

                        <!-- GAZP -->
                        <Button x:Name="GazpButton" Style="{StaticResource AssetButtonStyle}" 
                                Click="AssetButton_Click" Tag="GAZP" Margin="0,0,15,0">
                            <Border x:Name="GazpBorder" Style="{StaticResource UnselectedAssetStyle}" 
                                    Width="80" Height="80" CornerRadius="40">
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <Ellipse Width="50" Height="50" Fill="#0066CC" Margin="0,0,0,5"/>
                                    <TextBlock Text="GAZP" FontSize="10" FontWeight="Bold" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </Button>

                        <!-- LKOH -->
                        <Button x:Name="LkohButton" Style="{StaticResource AssetButtonStyle}" 
                                Click="AssetButton_Click" Tag="LKOH" Margin="0,0,15,0">
                            <Border x:Name="LkohBorder" Style="{StaticResource UnselectedAssetStyle}" 
                                    Width="80" Height="80" CornerRadius="40">
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <Ellipse Width="50" Height="50" Fill="#FF6B35" Margin="0,0,0,5"/>
                                    <TextBlock Text="LKOH" FontSize="10" FontWeight="Bold" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </Button>

                        <!-- NVTK -->
                        <Button x:Name="NvtkButton" Style="{StaticResource AssetButtonStyle}" 
                                Click="AssetButton_Click" Tag="NVTK" Margin="0,0,15,0">
                            <Border x:Name="NvtkBorder" Style="{StaticResource UnselectedAssetStyle}" 
                                    Width="80" Height="80" CornerRadius="40">
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <Ellipse Width="50" Height="50" Fill="#9C27B0" Margin="0,0,0,5"/>
                                    <TextBlock Text="NVTK" FontSize="10" FontWeight="Bold" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </Button>

                        <!-- YNDX -->
                        <Button x:Name="YndxButton" Style="{StaticResource AssetButtonStyle}" 
                                Click="AssetButton_Click" Tag="YNDX" Margin="0,0,15,0">
                            <Border x:Name="YndxBorder" Style="{StaticResource UnselectedAssetStyle}" 
                                    Width="80" Height="80" CornerRadius="40">
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <Ellipse Width="50" Height="50" Fill="#FFDD00" Margin="0,0,0,5"/>
                                    <TextBlock Text="YNDX" FontSize="10" FontWeight="Bold" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </Button>

                        <!-- Кнопка "Другие" -->
                        <Button x:Name="OtherButton" Style="{StaticResource AssetButtonStyle}" 
                                Click="OtherButton_Click" Margin="0,0,15,0">
                            <Border x:Name="OtherBorder" Style="{StaticResource UnselectedAssetStyle}" 
                                    Width="80" Height="80" CornerRadius="40">
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <TextBlock Text="+" FontSize="30" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                                    <TextBlock Text="ДРУГИЕ" FontSize="9" FontWeight="Bold" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </Button>

                        <!-- Выпадающий список других активов -->
                        <Popup x:Name="OtherAssetsPopup" PlacementTarget="{Binding ElementName=OtherButton}" 
                               Placement="Bottom" StaysOpen="False">
                            <Border Background="White" BorderBrush="#E0E0E0" BorderThickness="1" 
                                    CornerRadius="8" Padding="10" MinWidth="200">
                                <StackPanel>
                                    <TextBox x:Name="SearchTextBox" 
                                             Height="30" 
                                             Padding="10,5"
                                             BorderBrush="#E0E0E0"
                                             BorderThickness="1"
                                             Margin="0,0,0,10"
                                             Text="Поиск активов..."
                                             Foreground="#999999"
                                             GotFocus="SearchTextBox_GotFocus"
                                             LostFocus="SearchTextBox_LostFocus"
                                             TextChanged="SearchTextBox_TextChanged"
                                             KeyDown="SearchTextBox_KeyDown"/>

                                    <ListBox x:Name="OtherAssetsListBox" MaxHeight="200" BorderThickness="0"
                                             SelectionChanged="OtherAssetsListBox_SelectionChanged">
                                        <ListBoxItem Content="MOEX - Московская биржа" Tag="MOEX"/>
                                        <ListBoxItem Content="ROSN - Роснефть" Tag="ROSN"/>
                                        <ListBoxItem Content="TATN - Татнефть" Tag="TATN"/>
                                        <ListBoxItem Content="MAGN - ММК" Tag="MAGN"/>
                                        <ListBoxItem Content="NLMK - НЛМК" Tag="NLMK"/>
                                        <ListBoxItem Content="VTBR - ВТБ" Tag="VTBR"/>
                                        <ListBoxItem Content="ALRS - Алроса" Tag="ALRS"/>
                                    </ListBox>
                                </StackPanel>
                            </Border>
                        </Popup>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Панель временных диапазонов -->
            <!--<Border Grid.Row="2" Background="#F8F9FA" CornerRadius="12" Padding="20" Margin="0,0,0,15">
                <StackPanel>
                    <TextBlock Text="Временной диапазон" FontWeight="SemiBold" FontSize="16" Margin="0,0,0,15"/>

                    
                </StackPanel>
            </Border>-->

            <!-- Основной контент -->
            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Панель графика -->
                <Border Grid.Column="0" Background="White" BorderBrush="#E0E0E0" 
                        BorderThickness="1" CornerRadius="8" Margin="0,0,15,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Заголовок графика и индикаторы -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="15,15,15,10">
                            <TextBlock x:Name="ChartTitleTextBlock" Text="Выберите актив" 
                                       FontSize="18" FontWeight="SemiBold" 
                                       VerticalAlignment="Center" Margin="0,0,20,0"/>

                            <TextBlock Text="Индикаторы:" FontWeight="SemiBold" 
                                       VerticalAlignment="Center" Margin="0,0,10,0"/>

                            <CheckBox x:Name="MacdCheckBox" Content="MACD" Margin="0,0,10,0"
                                      Checked="IndicatorCheckBox_Changed" Unchecked="IndicatorCheckBox_Changed"/>
                            <CheckBox x:Name="RsiCheckBox" Content="RSI" Margin="0,0,10,0"
                                      Checked="IndicatorCheckBox_Changed" Unchecked="IndicatorCheckBox_Changed"/>
                            <CheckBox x:Name="StochasticCheckBox" Content="Stochastic" Margin="0,0,10,0"
                                      Checked="IndicatorCheckBox_Changed" Unchecked="IndicatorCheckBox_Changed"/>
                            <CheckBox x:Name="TrixCheckBox" Content="TRIX" Margin="0,0,10,0"
                                      Checked="IndicatorCheckBox_Changed" Unchecked="IndicatorCheckBox_Changed"/>
                            <CheckBox x:Name="AdxCheckBox" Content="ADX" Margin="0,0,10,0"
                                      Checked="IndicatorCheckBox_Changed" Unchecked="IndicatorCheckBox_Changed"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Left">
                            <Button x:Name="TimeFrame5M" Content="5м" Tag="CANDLE_INTERVAL_5_MIN"
            Style="{StaticResource TimeFrameButtonStyle}"
            Click="TimeFrameButton_Click"/>
                            <Button x:Name="TimeFrame15M" Content="15м" Tag="CANDLE_INTERVAL_15_MIN"
            Style="{StaticResource TimeFrameButtonStyle}"
            Click="TimeFrameButton_Click"/>
                            <Button x:Name="TimeFrame30M" Content="30м" Tag="CANDLE_INTERVAL_30_MIN"
            Style="{StaticResource TimeFrameButtonStyle}"
            Click="TimeFrameButton_Click"/>
                            <Button x:Name="TimeFrame1H" Content="1ч" Tag="CANDLE_INTERVAL_HOUR"
            Style="{StaticResource TimeFrameButtonStyle}"
            Click="TimeFrameButton_Click"/>
                            <Button x:Name="TimeFrame2H" Content="2ч" Tag="CANDLE_INTERVAL_2_HOUR"
            Style="{StaticResource TimeFrameButtonStyle}"
            Click="TimeFrameButton_Click"/>
                            <Button x:Name="TimeFrame4H" Content="4ч" Tag="CANDLE_INTERVAL_4_HOUR"
            Style="{StaticResource TimeFrameButtonStyle}"
            Click="TimeFrameButton_Click"/>
                            <Button x:Name="TimeFrame1D" Content="1д" Tag="CANDLE_INTERVAL_DAY"
            Style="{StaticResource SelectedTimeFrameButtonStyle}"
            Click="TimeFrameButton_Click"/>
                            <Button x:Name="TimeFrame1W" Content="1н" Tag="CANDLE_INTERVAL_WEEK"
            Style="{StaticResource TimeFrameButtonStyle}"
            Click="TimeFrameButton_Click"/>
                        </StackPanel>

                        <!-- Основной график цен с интегрированными индикаторами -->
                        <Border Grid.Row="2" Margin="0" Background="White" BorderBrush="#E0E0E0" BorderThickness="1">
                            <Grid Name="IndicatorsGrid">
                                <Grid.RowDefinitions>
                                    <!-- Основной график котировок -->
                                    <RowDefinition Height="2*" MinHeight="300"/>
                                    <!-- Индикаторные графики будут добавляться динамически -->
                                    <!-- Например: MACD, RSI, Stochastic, TRIX, ADX -->
                                </Grid.RowDefinitions>

                                <!-- Основной график ScottPlot в нулевом ряду -->
                                <Border Grid.Row="0" BorderBrush="#E0E0E0" BorderThickness="1" Margin="2">
                                    <ScottPlot:WpfPlot x:Name="MainPlot"/>
                                </Border>

                                <!-- LoadingTextBlock поверх всех графиков -->
                                <TextBlock x:Name="LoadingTextBlock" 
                                   Text="Выберите актив для отображения графика" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center"
                                   FontSize="16" 
                                   Foreground="#999999"
                                   Background="White"
                                   Padding="10"
                                   Grid.RowSpan="10"/>

                                <!-- Индикаторные графики будут добавляться программно в следующие ряды -->
                                <!-- Пример структуры для программного добавления:
                                <Border Grid.Row="1" BorderBrush="#E0E0E0" BorderThickness="1" Margin="2">
                                    <ScottPlot:WpfPlot x:Name="IndicatorPlot1"/>
                                </Border>
                                <Border Grid.Row="2" BorderBrush="#E0E0E0" BorderThickness="1" Margin="2">
                                    <ScottPlot:WpfPlot x:Name="IndicatorPlot2"/>
                                </Border>
                                -->
                            </Grid>
                        </Border>
                    </Grid>
                </Border>

                <!-- Боковая панель с данными -->
                <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- Информация о цене -->
                        <Border Background="#F8F9FA" CornerRadius="8" Padding="15" Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock x:Name="AssetNameTextBlock" Text="Актив не выбран" 
                                           FontWeight="SemiBold" FontSize="16" Margin="0,0,0,10"/>

                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Цена:" Margin="0,0,0,5"/>
                                    <TextBlock x:Name="PriceTextBlock" Grid.Row="0" Grid.Column="1" 
                                               Text="—" FontWeight="SemiBold" Margin="0,0,0,5"/>

                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Изменение:" Margin="0,0,0,5"/>
                                    <TextBlock x:Name="ChangeTextBlock" Grid.Row="1" Grid.Column="1" 
                                               Text="—" FontWeight="SemiBold" Margin="0,0,0,5"/>

                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Объем:" Margin="0,0,0,5"/>
                                    <TextBlock x:Name="VolumeTextBlock" Grid.Row="2" Grid.Column="1" 
                                               Text="—" FontWeight="SemiBold" Margin="0,0,0,5"/>

                                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Дата:" Margin="0,0,0,5"/>
                                    <TextBlock x:Name="UpdateDateTimeTextBlock" Grid.Row="3" Grid.Column="1" 
                                               Text="—" FontSize="10" Margin="0,0,0,5"/>

                                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Обновлено:" Margin="0,0,0,5"/>
                                    <TextBlock x:Name="UpdateTimeTextBlock" Grid.Row="4" Grid.Column="1" 
                                               Text="—" FontSize="10" Margin="0,0,0,5"/>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- StrongScore индикатор -->
                        <Border Background="#F8F9FA" CornerRadius="8" Padding="15" Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="StrongScore" FontWeight="SemiBold" FontSize="16" Margin="0,0,0,10"/>
                                <Grid Margin = "2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120px"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="60px"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock x:Name="NameSignal" Grid.Column="0" 
                                             Text="Сигнал разворота" 
                                             FontWeight="Bold" 
                                             Margin="10,0,0,0" 
                                             VerticalAlignment="Center"/>

                                    <ProgressBar x:Name="StrongScoreProgressBar" Grid.Column="1" 
                                               Value="0" 
                                               Maximum="100" 
                                               Height="20" 
                                               Background="#E0E0E0"
                                               Foreground="#4CAF50"/>

                                    <TextBlock x:Name="StrongScoreTextBlock" Grid.Column="2" 
                                             Text="—" 
                                             FontWeight="Bold" 
                                             Margin="10,0,0,0" 
                                             VerticalAlignment="Center"/>
                                </Grid>

                                <Grid Margin = "2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120px"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="60px"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock x:Name="NameSignalBullishScore" Grid.Column="0" 
                                             Text="Сила роста" 
                                             FontWeight="Bold" 
                                             Margin="10,0,0,0" 
                                             VerticalAlignment="Center"/>

                                    <ProgressBar x:Name="StrongScoreProgressBarBullishScore" Grid.Column="1" 
                                       Value="0" 
                                       Maximum="100" 
                                       Height="20" 
                                       Background="#E0E0E0"
                                       Foreground="#4CAF50"/>

                                    <TextBlock x:Name="StrongScoreTextBlockBullishScore" Grid.Column="2" 
                                         Text="—" 
                                         FontWeight="Bold" 
                                         Margin="10,0,0,0" 
                                         VerticalAlignment="Center"/>
                                </Grid>
                                <Grid Margin = "2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120px"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="60px"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock x:Name="NameSignalBearishScore" Grid.Column="0" 
                                            Text="Сила подения" 
                                            FontWeight="Bold" 
                                            Margin="10,0,0,0" 
                                            VerticalAlignment="Center"/>

                                    <ProgressBar x:Name="StrongScoreProgressBarBearishScore" Grid.Column="1" 
                                       Value="0" 
                                       Maximum="100" 
                                       Height="20" 
                                       Background="#E0E0E0"
                                       Foreground="#4CAF50"/>

                                    <TextBlock x:Name="StrongScoreTextBlockBearishScore" Grid.Column="2" 
                                         Text="—" 
                                         FontWeight="Bold" 
                                         Margin="10,0,0,0" 
                                         VerticalAlignment="Center"/>
                                </Grid>

                                <TextBlock x:Name="StrongScoreDescriptionTextBlock" 
                                         Text="Данные не загружены" 
                                         FontSize="12" 
                                         Foreground="#666666" 
                                         Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>


                        <Border Background="White" 
                            BorderBrush="#E0E0E0" 
                            BorderThickness="2" 
                            CornerRadius="12" 
                            Padding="20"
                            >


                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <!-- Заголовок -->
                                <Grid Grid.Row="0" Margin="0,0,0,15">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0"
                                       x:Name="FundamentalsTitle"
                                       Text="Фундаментальные показатели" 
                                       FontSize="18" 
                                       FontWeight="SemiBold"
                                       Foreground="#333333"/>
                                </Grid>

                                <!-- Содержимое со скроллом -->
                                <StackPanel Grid.Row="3">

                                    <!-- Ключевые показатели оценки компании -->
                                    <Border Background="#F8F9FA" CornerRadius="8" Padding="15" Margin="0,0,0,15">
                                        <StackPanel>
                                            <TextBlock Text="Ключевые показатели оценки компании" 
                                           FontWeight="SemiBold" 
                                           FontSize="14" 
                                           Margin="0,0,0,10"
                                           Foreground="#2196F3"/>

                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="2*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Grid.Row="0" Grid.Column="0" Text="P/E (Цена/Прибыль)" Margin="0,0,0,5"/>
                                                <TextBlock x:Name="PeRatioValue" Grid.Row="0" Grid.Column="1" Text="—" FontWeight="SemiBold" Margin="0,0,0,5"/>

                                                <TextBlock Grid.Row="1" Grid.Column="0" Text="P/B (Цена/Балансовая стоимость)" Margin="0,0,0,5"/>
                                                <TextBlock x:Name="PriceToBookValue" Grid.Row="1" Grid.Column="1" Text="—" FontWeight="SemiBold" Margin="0,0,0,5"/>

                                                <TextBlock Grid.Row="2" Grid.Column="0" Text="EV/EBITDA" Margin="0,0,0,5"/>
                                                <TextBlock x:Name="EvToEbitdaValue" Grid.Row="2" Grid.Column="1" Text="—" FontWeight="SemiBold" Margin="0,0,0,5"/>

                                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Рыночная капитализация" Margin="0,0,0,5"/>
                                                <TextBlock x:Name="MarketCapValue" Grid.Row="3" Grid.Column="1" Text="—" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                            </Grid>
                                        </StackPanel>
                                    </Border>

                                    <!-- Показатели прибыльности -->
                                    <Border Background="#F8F9FA" CornerRadius="8" Padding="15" Margin="0,0,0,15">
                                        <StackPanel>
                                            <TextBlock Text="Показатели прибыльности" 
                                                   FontWeight="SemiBold" 
                                                   FontSize="14" 
                                                   Margin="0,0,0,10"
                                                   Foreground="#4CAF50"/>

                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="2*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Grid.Row="0" Grid.Column="0" Text="EPS (Прибыль на акцию)" Margin="0,0,0,5"/>
                                                <TextBlock x:Name="EpsValue" Grid.Row="0" Grid.Column="1" Text="—" FontWeight="SemiBold" Margin="0,0,0,5"/>

                                                <TextBlock Grid.Row="1" Grid.Column="0" Text="ROE (Рентабельность капитала)" Margin="0,0,0,5"/>
                                                <TextBlock x:Name="RoeValue" Grid.Row="1" Grid.Column="1" Text="—" FontWeight="SemiBold" Margin="0,0,0,5"/>

                                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Чистая маржа" Margin="0,0,0,5"/>
